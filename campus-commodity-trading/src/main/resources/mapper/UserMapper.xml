<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.ky.jzk.mapper.UserMapper">
    <cache eviction="FIFO" readOnly="true" size="1024" flushInterval="30000"/>
    <insert id="insert" parameterType="cn.ky.jzk.model.User">
        INSERT INTO sys_user (userName, userPassword, userNick, userPhone, userEmail)
        VALUE (#{userName}, #{userPassword}, #{userNick}, #{userPhone}, #{userEmail})
    </insert>
    <delete id="delete" parameterType="java.lang.String">
        DELETE FROM sys_user
        WHERE userName = #{userName}
    </delete>
    <update id="update" parameterType="cn.ky.jzk.model.User">
        UPDATE sys_user
        <set>
            <if test="userPassword != null and userPassword != ''">
                userPassword = #{userPassword},
            </if>
            <if test="userNick != null and userNick != ''">
                userNick = #{userNick},
            </if>
            <if test="userPhone != null and userPhone != ''">
                userPhone = #{userPhone},
            </if>
            <if test="userEmail != null and userEmail != ''">
                userEmail = #{userEmail},
            </if>
        </set>
        WHERE userName = #{userName}
    </update>
    <select id="select" resultType="cn.ky.jzk.model.User">
        SELECT *
        FROM sys_user
    </select>
    <select id="selectByName" resultType="cn.ky.jzk.model.User">
        SELECT *
        FROM sys_user
        WHERE userName = #{userName}
    </select>
    <select id="login" resultType="cn.ky.jzk.model.User">
        SELECT *
        FROM sys_user
        WHERE userName = #{userName}
        AND userPassword = #{userPassword}
    </select>
</mapper>
